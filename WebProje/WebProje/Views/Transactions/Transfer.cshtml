@model WebProje.Models.Transaction

@{
    ViewData["Title"] = "Create";
}





<div class="row  container  w-100 justify-content-center">
    <div class="col-md-4">
        <h4>Transfer</h4>
        <hr />
        <form asp-action="Transfer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TransactionAmount" class="control-label text-danger ">Deposit Amount </label>
                <input asp-for="TransactionAmount" class="form-control bg-gradient" />
                <span asp-validation-for="TransactionAmount" class="text-danger"></span>
            </div>

            <div class="form-group ">
                <label asp-for="BankAccountID " class="control-label text-danger"> Bank Account Name</label>
                <select asp-for="BankAccountID" class="form-control bg-gradient" asp-items="ViewBag.BankAccountID"></select>
            </div>
            <div class="form-group">
                <label asp-for="TransferBankAccountID " class="control-label text-danger"> Transfer Account Name</label>
                <select asp-for="TransferBankAccountID" class="form-control bg-gradient" asp-items="ViewBag.TrasferAccount"></select>
            </div>

            <div class="form-group ">
                <input type="submit" id="bntadd" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
