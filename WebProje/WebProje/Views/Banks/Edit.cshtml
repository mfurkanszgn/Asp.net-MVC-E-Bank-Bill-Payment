@model WebProje.Models.Bank

@{
    ViewData["Title"] = "Edit";
}



<div class="row w-100 justify-content-center ">
    <div class="col-md-4">

        <h4>Bank</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BankID" />
            <div class="form-group">
                <label asp-for="BankName" class="control-label"></label>
                <input asp-for="BankName" class="form-control" />
                <span asp-validation-for="BankName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankMoney" class="control-label"></label>
                <input asp-for="BankMoney" class="form-control" />
                <span asp-validation-for="BankMoney" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankFeeRatio" class="control-label"></label>
                <input asp-for="BankFeeRatio" class="form-control" />
                <span asp-validation-for="BankFeeRatio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
