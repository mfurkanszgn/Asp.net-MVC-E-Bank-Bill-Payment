            <td>
                @Html.DisplayFor(modelItem => item.BankAccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BankAccountType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BankAccountBalance)
