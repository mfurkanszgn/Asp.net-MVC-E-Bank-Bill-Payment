@model WebProje.Models.BankAccount

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BankAccount</h4>
<hr />
<div class="row container  justify-content-center  ">
    <div class="col-md-4 ">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BankAccountName" class="control-label text-danger"></label>
                <input asp-for="BankAccountName" class="form-control bg-gradient" />
                <span asp-validation-for="BankAccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccountType" class="control-label text-danger"></label>
                @Html.DropDownListFor(x => x.BankAccountType, new SelectList(ViewBag.tyeps, "Name"), new { @class = "form-control" })
                <span asp-validation-for="BankAccountType" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="BankAccountBalance" class="control-label text-danger"></label>
                <input asp-for="BankAccountBalance" class="form-control  bg-gradient" />
                <span asp-validation-for="BankAccountBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccountLimit" class="control-label text-danger"></label>
                <input asp-for="BankAccountLimit" class="form-control bg-gradient" />
                <span asp-validation-for="BankAccountLimit" class="text-danger"></span>
            </div>
            @if (this.User.IsInRole("Admin"))
            {
                <div class="form-group">
                    <label asp-for="UsersId" class="control-label"></label>
                    <select asp-for="UsersId" class="form-control" asp-items="ViewBag.UsersId"></select>
                </div>
            }
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
