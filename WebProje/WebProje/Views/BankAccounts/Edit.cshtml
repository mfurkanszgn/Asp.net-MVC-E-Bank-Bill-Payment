@model WebProje.Models.BankAccount

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BankAccount</h4>
<hr />
<div class="row  justify-content-center ">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger">Bank Account Name</div>
            <input type="hidden" asp-for="BankAccountID" />
            <div class="form-group">
                <label asp-for="BankAccountName" class="control-label"></label>
                <input asp-for="BankAccountName" class="form-control" />
                <span asp-validation-for="BankAccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccountType" class="control-label"></label>
                <input asp-for="BankAccountType" class="form-control" />
                <span asp-validation-for="BankAccountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccountBalance" class="control-label"></label>
                <input asp-for="BankAccountBalance" class="form-control" />
                <span asp-validation-for="BankAccountBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccountLimit" class="control-label"></label>
                <input asp-for="BankAccountLimit" class="form-control" />
                <span asp-validation-for="BankAccountLimit" class="text-danger"></span>
            </div>
            @if (this.User.IsInRole("Admin")) 
            {<div class="form-group">
                    <label asp-for="UsersId" class="control-label">User Name</label>
                    <select asp-for="UsersId" class="form-control" asp-items="ViewBag.UsersId"></select>
                    <span asp-validation-for="UsersId" class="text-danger"></span>
                </div>
             }
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
